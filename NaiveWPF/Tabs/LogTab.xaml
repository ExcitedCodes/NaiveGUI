<UserControl x:Class="NaiveGUI.LogTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NaiveGUI"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="315" d:DesignWidth="580">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Foreground="#DDFFFFFF" FontSize="26" Margin="24,0,0,0">Log</TextBlock>
        <Border Padding="8" BorderBrush="#FFAAAAAA" Background="#33000000" BorderThickness="2" Margin="16,16,16,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="XD">
                <local:SelectableTextBlock x:Name="TextBlockLog" TextWrapping="WrapWithOverflow" FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
