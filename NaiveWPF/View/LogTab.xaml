<UserControl x:Class="NaiveGUI.View.LogTab" mc:Ignorable="d"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:Helper="clr-namespace:NaiveGUI.Helper"
             d:DesignHeight="315" d:DesignWidth="580"
             FontFamily="{DynamicResource MaterialDesignFont}">
    <DockPanel>
        <TextBlock DockPanel.Dock="Top" Foreground="#DDFFFFFF" FontSize="26" Margin="24,0,0,0">Log</TextBlock>
        <Border Padding="8" BorderBrush="#FFAAAAAA" Background="#33000000" BorderThickness="2" Margin="16,16,16,16">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Name="XD">
                <Helper:SelectableTextBlock x:Name="TextBlockLog" TextWrapping="WrapWithOverflow" FontFamily="Consolas"/>
            </ScrollViewer>
        </Border>
    </DockPanel>
</UserControl>
